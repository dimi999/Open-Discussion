<h3>Editare discutie</h3>

<div class="container">
    <form method="post" action="/Discussion/Edit/@ViewBag.Discussion.DiscussionId">
        <input class="form-control mb-1 w-50" type="text" value="@ViewBag.Discussion.Title" name="Title" />
        <textarea class="form-control mb-1" rows=5 name="Content">@ViewBag.Discussion.Content</textarea>
        <select class="form-select mb-1" name="CategoryId">
            @foreach (var categ in ViewBag.Categories)
            {
                if (ViewBag.Discussion.CategoryId == categ.CategoryId) {
                    <option value="@categ.CategoryId" selected>@categ.CategoryName</option>
                } else {
                    <option value="@categ.CategoryId">@categ.CategoryName</option>
                }
            }
        </select>
        <button class="metallic-button" type="submit">Save Discussion</button>
    </form>
</div>