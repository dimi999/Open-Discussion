@{
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-dark" role="alert">
        @ViewBag.Message
    </div>
}

<h3 class="text-center">Categories</h3>

<div class="container">

    <div class="d-flex">

        @if (ViewBag.ShowAdminTab != null)
        {
            <a href="/Admin/Index" class="btn btn-success mx-1">Admin Tab</a>
        }
    </div>

    <div class="mt-3">
        <form method="get" action="/Search/Index">
            <div class="input-group mb-3">
                <input type="text" class="form-control"
                       placeholder="Search keywords..." name="search">
                <button class="btn btn-outline-success"
                        type="submit">
                    Search
                </button>
            </div>
        </form>
    </div>

    <div>
        @foreach (var category in ViewBag.Categories)
        {
            <div class="p-1">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Category: @category.Category.CategoryName</h5>
                        <p>@category.No_Discussions discussions</p>
                        <div class="d-flex flex-row justify-content-between">
                            @if (category.No_Discussions > 0)
                            {
                                <a href="/Category/View/@category.Category.CategoryId" class="btn btn-success">View discussions</a>
                            }
                            else
                            {
                                <a href="#" class="disabled btn btn-success">View discussions</a>

                            }
                            <form method="post" action="/Category/Delete/@category.Category.CategoryId">
                                <button class="btn btn-danger" type="submit">Delete Category</button>
                            </form>
                            <a href="/Discussion/New" class="btn btn-success">Start Discussion</a>
                            <a href="/Category/Edit/@category.Category.CategoryId" class="btn btn-info mx-1" type="submit">Edit Category</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

     <form method="post" action="/Category/New">
            <input class="form-control mb-1 w-50" type="text" placeholder="New Category" name="CategoryName" />
            <button class="btn btn-success" type="submit">Insert Category</button>
        </form>

</div>
