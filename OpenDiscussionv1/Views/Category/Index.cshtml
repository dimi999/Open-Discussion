@{
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-dark" role="alert">
        @ViewBag.Message
    </div>
}

<h3 class="text-center">Categories</h3>

<div class="container">

    <div class="d-flex">
        <a href="/Discussion/Index" class="btn btn-success">View Discussions</a>
    </div>

    <div class="row row-cols-3 mb-3">
        @foreach (var category in ViewBag.Categories)
        {
            <div class="p-1">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.CategoryName</h5>
                        <div class="d-flex flex-row">
                            <form method="post" action="/Category/Delete/@category.CategoryId">
                                <button class="btn btn-danger" type="submit">Delete Category</button>
                            </form>
                            <a href="/Category/Edit/@category.CategoryId" class="btn btn-info mx-1" type="submit">Edit Category</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

     <form method="post" action="/Category/New">
            <input class="form-control mb-1 w-50" type="text" placeholder="New Category" name="CategoryName" />
            <button class="btn btn-success" type="submit">Insert Category</button>
        </form>

</div>
