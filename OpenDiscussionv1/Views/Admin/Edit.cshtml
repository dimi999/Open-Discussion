@{
}

<h3 class="text-center">Edit role for @ViewBag.user.UserName</h3>

<p>Current role: @ViewBag.current_role</p>

<form method="post" action="/Admin/Edit/@ViewBag.user.Id">
    <input hidden name="user_id" value="@ViewBag.user.Id" />
    <select class="form-select" name="role_id">
        @foreach (var role in ViewBag.roles)
        {
            @if (role.Name == ViewBag.current_role)
            {
                <option selected value="@role.Id">@role.Name</option>
            }
            else
            {
                <option value="@role.Id">@role.Name</option>
            }
        }
    </select>
    <button type="submit" class="btn btn-primary">Save changes</button>
</form>